<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="30dp">

    <EditText
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Full Name"
        android:textColor="@color/teal_700"
        />

    <TextView
        android:id="@+id/choiceHobby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userName"
        android:text="Which one would you go for ? "/>

        <RadioGroup
            android:id="@+id/choiceHobbyRadiobtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/choiceHobby">
            <RadioButton
                android:id="@+id/choiceBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Books"/>
            <RadioButton
                android:id="@+id/choiceMusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Music"/>
            <RadioButton
                android:id="@+id/choiceSports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sports"/>
        </RadioGroup>

        <EditText
            android:id="@+id/favFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/teal_700"
            android:hint="Whats your favourite meal? "
            android:layout_below="@+id/choiceHobbyRadiobtn"/>

        <EditText
            android:id="@+id/favMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/teal_700"
            android:hint="What is your favorite"
            android:layout_below="@+id/favFood"/>
        <TextView
            android:id="@+id/isalandQue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/favMovie"
            android:text="You r going to an Island that you've never heard off, which one would you carry?"
            />
        <CheckBox
            android:id="@+id/option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Umbrella"
            android:layout_below="@+id/isalandQue"/>
        <CheckBox
            android:id="@+id/option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Math Sticks"
            />
        <CheckBox
            android:id="@+id/option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mosquito repellant"/>
        <CheckBox
            android:id="@+id/option4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Machette and Firt Aid Kit"/>

        <TextView
            android:id="@+id/UserDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:layout_centerInParent="true"
            android:layout_below="@+id/btnSave"
            android:layout_centerVertical="true"
            />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Send Message"
           />

</RelativeLayout>