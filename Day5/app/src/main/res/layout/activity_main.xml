<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:textSize="12dp"
    android:padding="30dp">


        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="1. Full Name"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/choiceHobby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userName"
            android:layout_marginTop="10dp"
            android:textColor="@color/purple_500"
            android:text="2. Which one would you go for ? "
            android:textSize="13dp"
           />

        <RadioGroup
            android:id="@+id/choiceHobbyRadiobtn"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_below="@+id/choiceHobby">

            <RadioButton
                android:id="@+id/choiceBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Books"
                android:textColor="@color/teal_700"
                android:textSize="10dp" />

            <RadioButton
                android:id="@+id/choiceMusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Music"
                android:textColor="@color/teal_700"
                android:textSize="10dp" />

            <RadioButton
                android:id="@+id/choiceSports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sports"
                android:textColor="@color/teal_700"
                android:textSize="10dp" />
        </RadioGroup>

        <EditText
            android:id="@+id/favFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/choiceHobbyRadiobtn"
            android:layout_marginTop="5dp"
            android:hint="3. Whats your favourite meal ? "
            android:textSize="12dp" />

        <EditText
            android:id="@+id/favMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/favFood"
            android:layout_marginTop="5dp"
            android:hint="4. What is your favorite Movie ?"
            android:textColor="@color/teal_700"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/isalandQue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/favMovie"
            android:layout_marginTop="10dp"
            android:textColor="@color/purple_500"
            android:text="5. You are going to an Island that you've never heard off, which three items would you carry?"
            android:textSize="13dp"
           />

        <RelativeLayout
            android:id="@+id/checkList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/isalandQue">

            <CheckBox
                android:id="@+id/optionUmbrella"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Umbrella"
                android:textColor="@color/teal_700"
                android:textSize="10dp" />

            <CheckBox
                android:id="@+id/optionMachSticks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/optionUmbrella"
                android:textColor="@color/teal_700"
                android:text="Math Sticks"
                android:textSize="10dp" />

            <CheckBox
                android:id="@+id/optionRepellant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/optionMachSticks"
                android:textColor="@color/teal_700"
                android:text="Mosquito repellant"
                android:textSize="10dp" />

            <CheckBox
                android:id="@+id/optionMachette"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/optionRepellant"
                android:textColor="@color/teal_700"
                android:text="Machette and Firt Aid Kit"
                android:textSize="10dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/UserDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnSave"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:text="Hello World!"
            android:textColor="@color/teal_700"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkList"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Save Deatails"
            android:textSize="12dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="200dp"
        tools:srcCompat="@tools:sample/avatars" />

</RelativeLayout>